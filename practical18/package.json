{
  "name": "taskify-mern-app",
  "version": "1.0.0",
  "description": "A modern task management and productivity dashboard built with MERN stack",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "cd frontend && npm start",
    "build": "cd frontend && npm run build",
    "install-server": "cd backend && npm install",
    "install-client": "cd frontend && npm install",
    "install-all": "npm run install-server && npm run install-client",
    "start": "cd backend && npm start",
    "heroku-postbuild": "npm run install-all && npm run build"
  },
  "keywords": [
    "mern",
    "react",
    "nodejs",
    "express",
    "mongodb",
    "task-management",
    "productivity",
    "dashboard",
    "firebase",
    "responsive"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/taskify.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/taskify/issues"
  },
  "homepage": "https://yourusername.github.io/taskify",
  "dependencies": {
    "mongoose": "^8.18.3"
  }
}
